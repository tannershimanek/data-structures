
{
  "compilerOptions": {
    "target": "ESNext",               // Set the JavaScript version to the latest
    "module": "CommonJS",            // Node.js uses CommonJS modules
    "esModuleInterop": true,         // Allows default imports from modules without default exports
    "moduleResolution": "node",      // To work nicely with Node.js
    "outDir": "./dist",              // Transpiled JS files will be output here
    "rootDir": "./src",              // Source TS files are here
    "strict": true,                  // Enable strict type-checking options
    "skipLibCheck": true,            // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, 
    "allowJs": true,                   // Allow JavaScript files to be compiled
  },
  "include": [
    "src/**/*.ts"                    // Include all TypeScript files in src directory
  ],
  "exclude": [
    "node_modules"                   // Don't transpile node_modules
  ]
}